<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Owner Login</title>
  <link rel="stylesheet" href="/stylesheets/ownerlogin.css">
</head>
<body>
  <div class="container">
    <div class="form-box">
      <h2 id="form-title">Login</h2>
      <form id="login-form" method="post" action="owners/login">
        <div class="input-group">
          <label>Email</label>
          <input type="email" required name="email" placeholder="email">
        </div>
        <div class="input-group">
          <label>Password</label>
          <input type="password" placeholder="password" required name="password">
        </div>
        <button type="submit" class="btn">Login</button>
        <p>Don't have an account? <a href="#" onclick="toggleForm()">Register here</a></p>
      </form>

      <form id="register-form" style="display: none;" action="owners/register" method="post">
        <div class="input-group">
          <label>fullname</label>
          <input type="text" required name="fullname">
        </div>
        <div class="input-group">
          <label>Email</label>
          <input type="email" required name="email">
        </div>
        <div class="input-group">
          <label>Password</label>
          <input type="password" required name="password">
        </div>
        <button type="submit" class="btn">Register</button>
        <p>Already have an account? <a href="#" onclick="toggleForm()">Login here</a></p>
      </form>
    </div>
  </div>

  <script>
    function toggleForm() {
      const loginForm = document.getElementById("login-form");
      const registerForm = document.getElementById("register-form");
      const title = document.getElementById("form-title");
      if (loginForm.style.display === "none") {
        loginForm.style.display = "block";
        registerForm.style.display = "none";
        title.innerText = "Login";
      } else {
        loginForm.style.display = "none";
        registerForm.style.display = "block";
        title.innerText = "Register";
      }
    }
  </script>
</body>
</html>
